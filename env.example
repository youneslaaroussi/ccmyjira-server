# Server Configuration
PORT=3000
NODE_ENV=development

# Feature Flags
ENABLE_SPRINTS=false
ENABLE_SMART_ASSIGNMENT=false

# Redis Configuration (for Queue System)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=4000

# JIRA Configuration
JIRA_BASE_URL=https://yourcompany.atlassian.net
JIRA_USERNAME=your-email@company.com
JIRA_API_TOKEN=your_jira_api_token_here
JIRA_PROJECT_KEY=PROJ

# Postmark Configuration
POSTMARK_SERVER_TOKEN=your_postmark_server_token_here
POSTMARK_ACCOUNT_TOKEN=your_postmark_account_token_here
# Note: Postmark doesn't use webhook secrets. Instead, use:
# 1. IP whitelisting (allow only Postmark IPs)
# 2. Basic auth in webhook URL: https://user:pass@yourdomain.com/webhooks/postmark
# 3. HTTPS for encryption

# Queue Configuration
QUEUE_CONCURRENCY=5
QUEUE_MAX_ATTEMPTS=3
QUEUE_BACKOFF_DELAY=5000

# AI Agent Configuration
AI_AGENT_TIMEOUT=30000
MAX_EMAIL_PROCESSING_RETRIES=3
JIRA_RATE_LIMIT_DELAY=1000 